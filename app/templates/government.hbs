<div class="row">
  <div class="page-header">
    <h1 class="text-center">Comparar Estudios</h1>
  </div>
</div>
  <!-- botonera -->
<div class="row">
  <h3>Comparar programas año a año</h3>
  <div class="col-md-12">
    <a href="#" class="btn btn-default btn-sm">Michelle Bachelet con Sebastián Piñera al 2do año de Gobierno</a>
    <a href="#" class="btn btn-default btn-sm">Michelle Bachelet con Sebastián Piñera al 3er año de Gobierno</a>
  </div>
  <h3>Comparar trayectorias de gobiernos</h3>
  <div class="col-md-12">
    <a href="#" class="btn btn-default btn-sm">Michelle Bachelet Gobierno completo</a>
    <a href="#" class="btn btn-default btn-sm">Sebastián Piñera Gobierno completo</a>
  </div>
</div>
  <!-- EObotonera -->

<div class="row">
<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h3>{{study.government.name}}</h3>
  </div>
  <div class="panel-body compare">
    <!-- Promesas realizadas -->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Promesas realizadas <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          <div class="col-md-12 compare-box">
            <p class="text-center">Bachelet</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.promises.length}}</p>
            <p class="compare-info">Promesas</p>
          </div>
        </div>
        </div>
      </div>
    </div>
    <!-- Promesas realizadas -->
    <!-- Cumplimiento y coherencia total -->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Cumplimiento y coherencia total <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          {{#each model.comparable as |study|}}
          <div class="col-xs-12 col-sm-4 col-md-4 compare-box">
            <p class="text-center">Bachelet {{study.year}}</p>
            <div class="graph-one">
              {{ember-chart type='doughnut' data=study.chartData options=doughnutOpt height=150}}
            </div>
            <p class="compare-info">Avance</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.fullfilment}}%</p>
            <p class="compare-info">Coherencia</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.coherenceLevel}}</p>
          </div>
          {{/each}}
        </div>
        </div>
      </div>
    </div>
    <!-- Cumplimiento y coherencia total -->
    <!-- Proyectos enviados -->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Proyectos enviados <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          {{#each model.comparable as |study|}}
          <div class="col-xs-12 col-sm-4 col-md-4 compare-box">
            <p class="text-center">Bachelet {{study.year}}</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.billsCount}}</p>
            <p class="compare-info">Proyectos</p>
          </div>
          {{/each}}
        </div>
      </div>
      </div>
    </div>
    <!-- Proyectos enviados -->
    <!-- Promesas que presentan algún tipo de avance-->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Promesas que presentan algún tipo de avance <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          {{#each model.comparable as |study|}}
          <div class="col-xs-12 col-sm-4 col-md-4 compare-box">
            <p class="text-center">Bachelet {{study.year}}</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.presentanAvance}}/{{study.promises.length}}</p>
            <p class="compare-info">Promesas completas</p>
            <p class="compare-info">({{study.finalizadas}} completas - {{study.enDesarrollo}} en progreso)</p>
          </div>
          {{/each}}
        </div>
      </div>
      </div>
    </div>
    <!-- Promesas que presentan algún tipo de avance-->
    <!-- Capacidad -->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Capacidad <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          {{#each model.comparable as |study|}}
          <div class="col-xs-12 col-sm-4 col-md-4 compare-box">
            <p class="text-center">Bachelet {{study.year}}</p>
            <p class="compare-result compare-info" style="color: {{study.government.color1}}">{{study.capacity}}</p>
            <p class="compare-info">Promesas con puntaje máximo</p>
          </div>
          {{/each}}
        </div>
      </div>
      </div>
    </div>
    <!-- Capacidad -->
    <!-- Areas -->
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <h4>Áreas <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."></i></h4>
      </div>
      <div class="panel-body">
        <div class="container">
        <div class="row">
          <div class="col-md-12">
            {{#each model.comparable as |study|}}
            <p><i class="fa fa-circle" aria-hidden="true" style="padding-left: 9px; color: {{study.color}}"></i> {{model.name}} {{study.version}} - {{study.year}}</p>
            {{/each}}
          </div>
        </div>
        <table class="table table-responsive">
          <thead>
            <tr>
              <th>Área</th>
              <th class="text-center">Avance</th>
            </tr>
          </thead>
          <tbody>
            {{#each areas as |a|}}
            <tr>
              <td width="10%">{{a.name}}</td>
                <td width="80%">
                  <!-- bar01-->
                  <div class="progress compare-bar hidden-xs hidden-sm">
                    {{#each model.comparable as |study|}}
                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{fullfilmentPerArea a study}}%; background-color: {{study.color}}">
                      <span class="sr-only">{{fullfilmentPerArea a study}}%</span>
                    </div>
                    <p class="compare-info hidden-md hidden-lg" style="color: {{study.color}}">{{fullfilmentPerArea a study}}%</p>
                    {{/each}}
                  </div>
                  <!-- bar01-->
                </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <!-- Areas -->
  </div>
</div>
</div>



<h1>{{model.name}}</h1>
<ul class='govs'>

{{#each model.comparable as |study|}}
  <li>{{study.version}} - {{study.year}}</li>
{{/each}}
</ul>
